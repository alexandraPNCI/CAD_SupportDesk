<!DOCTYPE html>
<html>
  <head>
    <title>SupportDesk</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-light">

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container">
        <a class="navbar-brand" href="/">SupportDesk</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "My Tickets", tickets_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "New Ticket", new_ticket_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>

          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item">
                <span class="navbar-text me-3">
                  Logged in as <strong><%= current_user.email %></strong>
                </span>
              </li>
              <li class="nav-item">
                <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-light btn-sm" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "btn btn-light btn-sm" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>


    <!-- MAIN CONTENT -->
    <div class="container py-4">
      <%= yield %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>




